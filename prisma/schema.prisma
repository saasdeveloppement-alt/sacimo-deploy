generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  password      String?
  role          UserRole  @default(AGENT)
  agencyId      String?
  phone         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  agency        Agency?   @relation(fields: [agencyId], references: [id])
  Account               Account[]
  Session               Session[]
  emailVerified         DateTime?
  localisationRequests  LocalisationRequest[]

  @@map("users")
}

model Agency {
  id          String      @id @default(cuid())
  name        String
  billingTier BillingTier @default(STARTER)
  seats       Int         @default(1)
  phone       String?     @map("phone_number")
  companySize String?     @map("company_size")
  primaryRole String?     @map("primary_role")
  objectives  String?
  notes       String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  reports     Report[]
  searches    Search[]
  users       User[]

  @@map("agencies")
}

model Search {
  id        String   @id @default(cuid())
  agencyId  String
  name      String
  params    Json
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  agency    Agency   @relation(fields: [agencyId], references: [id], onDelete: Cascade)

  @@map("searches")
}

model Listing {
  id              String        @id @default(cuid())
  source          ListingSource
  isPrivateSeller Boolean
  title           String
  price           Int
  type            ListingType
  surface         Int?
  rooms           Int?
  photos          String[]      @default([])
  city            String
  postalCode      String
  geo             Json?
  publishedAt     DateTime
  url             String
  description     String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  competitorId    String?
  competitor      Competitor?   @relation(fields: [competitorId], references: [id])
  tags            Tag[]         @relation("ListingToTag")

  @@map("listings")
}

model Report {
  id            String   @id @default(cuid())
  agencyId      String
  date          DateTime @unique
  listingsCount Int      @default(0)
  privateCount  Int      @default(0)
  proCount      Int      @default(0)
  fileUrlPdf    String?
  fileUrlCsv    String?
  isSent        Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  agency        Agency   @relation(fields: [agencyId], references: [id], onDelete: Cascade)

  @@map("reports")
}

model Competitor {
  id         String    @id @default(cuid())
  name       String
  zone       String
  lastSeenAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  listings   Listing[]

  @@map("competitors")
}

model Tag {
  id        String    @id @default(cuid())
  name      String    @unique
  color     String    @default("#3B82F6")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  listings  Listing[] @relation("ListingToTag")

  @@map("tags")
}

model AnnonceScrape {
  id             String           @id @default(cuid())
  title          String
  price          Int
  surface        Int?
  rooms          Int?
  postalCode     String?
  city           String
  url            String           @unique
  publishedAt    DateTime
  images         String[]         @default([])
  picturesRemote String[]         @default([])
  pictures       String[]         @default([])
  description    String?
  source         String           @default("LEBONCOIN")
  isNew          Boolean          @default(true)
  lastScrapedAt  DateTime         @default(now())
  latitude       Float?
  longitude      Float?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  location       AnnonceLocation?

  @@map("annonce_scrapes")
}

model AnnonceLocation {
  id              String  @id @default(cuid())
  annonceScrapeId String  @unique
  // Localisation validée (par l'agent)
  address         String?
  latitude        Float?
  longitude       Float?
  precisionMeters Int? // Précision estimée en mètres

  // Données AUTO issues du pipeline Vision/StreetView
  autoAddress    String?
  autoLatitude   Float?
  autoLongitude  Float?
  autoConfidence Float? // 0 à 1
  autoSource     String? // "EXIF" | "VISION_GEOCODING" | "MANUAL" etc.

  // Logs / debug
  visionRaw           Json? // Payload brut (ou partiel) de Google Vision
  geocodingCandidates Json? // Liste d'adresses / coords candidates avec score

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  annonceScrape AnnonceScrape @relation(fields: [annonceScrapeId], references: [id], onDelete: Cascade)

  @@map("annonce_locations")
}

enum UserRole {
  OWNER
  ADMIN
  AGENT
}

enum BillingTier {
  STARTER
  PRO
  AGENCY
}

enum ListingType {
  APARTMENT
  HOUSE
  STUDIO
  LOFT
  PENTHOUSE
  VILLA
  TOWNHOUSE
  OTHER
}

enum ListingSource {
  LEBONCOIN
  SELOGER
  PAP
  ORPI
  CENTURY21
  GUY_HOQUET
  IMMONOT
  OTHER
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @map("refreshToken")
  access_token      String? @map("accessToken")
  expires_at        Int?    @map("expiresAt")
  token_type        String? @map("tokenType")
  scope             String?
  id_token          String? @map("idToken")
  session_state     String? @map("sessionState")
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model DemoRequest {
  id          String            @id @default(cuid())
  fullName    String            @map("full_name")
  email       String
  phone       String?
  company     String
  companySize String?           @map("company_size")
  role        String?
  objectives  String?
  message     String?
  status      DemoRequestStatus @default(PENDING)
  createdAt   DateTime          @default(now()) @map("created_at")

  @@index([email])
  @@map("demo_requests")
}

enum DemoRequestStatus {
  PENDING
  CONTACTED
  QUALIFIED
}

model UserScan {
  id        String   @id @default(cuid())
  userId    String
  count     Int      @default(1)
  hour      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, hour])
  @@index([userId, hour])
  @@map("user_scans")
}

model SavedAnalysis {
  id          String   @id @default(cuid())
  userId      String
  label       String
  postalCodes String[]
  data        Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@map("saved_analyses")
}

model AdsCache {
  id          String   @id @default(cuid())
  postalCode  String   @unique
  ads         Json     // Array of normalized ads
  pagesCount  Int      @default(0)
  totalCount   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  expiresAt   DateTime // Cache expiration (30 minutes)

  @@index([postalCode, expiresAt])
  @@map("ads_cache")
}

// ============================================
// MODULE DE LOCALISATION AVANCÉ
// ============================================

model LocalisationRequest {
  id          String                @id @default(cuid())
  userId      String?               // Optionnel (peut être anonyme)
  rawInput    Json                  // { url?: string, text?: string, images?: string[], hintPostalCode?: string, hintCity?: string }
  userHints   Json?                 // Indices structurés fournis par l'utilisateur (LocalizationUserHints)
  status      LocalisationStatus    @default(PENDING)
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  
  candidates  LocationCandidate[]
  user        User?                 @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([status, createdAt])
  @@map("localisation_requests")
}

model LocationCandidate {
  id                    String   @id @default(cuid())
  localisationRequestId  String
  lat                   Float
  lng                   Float
  addressText           String
  postalCode            String?
  city                  String?
  parcelId              String?   // Section + numéro de parcelle cadastrale
  confidence            Float     // 0-100
  confidenceBreakdown   Json      // { "text_match": 0.4, "image_match": 0.3, "dvf_density": 0.2, "streetview_similarity": 0.1 }
  sources               Json      // { "google_geocode": true, "cadastre": true, "dvf": true, "ads": ["hubimo", "seloger"] }
  best                  Boolean   @default(false) // Candidat retenu comme meilleur
  
  localisationRequest   LocalisationRequest @relation(fields: [localisationRequestId], references: [id], onDelete: Cascade)

  @@index([localisationRequestId, best])
  @@index([localisationRequestId, confidence])
  @@map("location_candidates")
}

enum LocalisationStatus {
  PENDING
  RUNNING
  DONE
  FAILED
}
